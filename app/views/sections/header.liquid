{% assign category_html = ""%}
<div class="header {% if section.settings.fixed_position %}fixed{%endif%}  header-theme-{{section.settings.theme_color}}">
  {% if section.settings.message != ''%}
  <div class="header-message  pt-2 pb-2">
    {{section.settings.message}}
  </div>
  {% endif%}
  <div class="container{% if section.settings.large_size %}-fluid{%endif%}">
    <div class="row  align-items-center justify-content-{{section.settings.cells_align}}">
      <div class="col-auto header-block header-block-menu d-lg-none order-1">
        <a href="#nav-sm" class="text-primary text-left d-md-none" data-toggle="nav-sm-display" data-target="#nav-sm">
          <i class="fas fa-bars"></i>
        </a>
      </div>
      {% for block in section.blocks %}
        {% case block.settings.cell_size %}
          {% when 'xs' %}
            {% assign css_cell = "col-auto col-lg-2 col-xl-1 "%}
          {% when 'sm' %}
            {% assign css_cell = "col-auto col-lg-3 col-xl-26 "%}
          {% when 'md' %}
            {% assign css_cell = "col-auto col-lg-6 col-xl-4 "%}
          {% when 'lg' %}
            {% assign css_cell = "col-auto col-lg-8 col-xl-6 "%}
          {% when 'xl' %}
            {% assign css_cell = "col-auto col-lg-10 col-xl-10 "%}
          {% when 'full' %}
            {% assign css_cell = "col-12 "%}
          {% when 'auto' %}
            {% assign css_cell = "col-auto"%}
        {% endcase %}

        {% case block.settings.align_block %}
          {% when 'auto' %}
            {% assign css_cell = css_cell | append: " "%}
          {% when 'left' %}
            {% assign css_cell = css_cell | append: " ml-auto "%}
          {% when 'right' %}
            {% assign css_cell = css_cell | append: " mr-auto "%}
        {% endcase %}
        {% if block.type == "navigation" or block.settings.display_sm_icon == false%}
          {% assign css_cell = css_cell | append:" d-none d-md-block"%}
        {% endif %}
        {% assign display_sm_icon_css = "" %}
        {% if block.settings.display_sm_icon == false %}
          {% assign display_sm_icon_css = "d-none d-md-flex" %}
        {% endif %}
        
        <div class="header-block header-block-{{ block.type }} {{css_cell}} block">
          {% include 'block_debug' %}
          {% case block.type %}
            {% when "text" %}
              {{ block.settings.content }}
            {% when "logo" %}
              <div class="text-{{block.settings.align_img}}">
                <a class="" href="{% path_to 'home' %}">
                  <img src="{{ block.settings.picture }}" alt="{{ site.name }}" class="navbar-brand img-fluid"/>
                </a>
              </div>
            {% when "link_icon" %}
              <div class="{{display_sm_icon_css}}">
                {% assign css_icon = "" %}
                {% if block.settings.inline_display %}
                  {% assign css_icon = "icon-inline" %}
                {% endif %}
                <div class="icon {{ css_icon }}">
                  <a class="icon-link" href="{{ block.settings.link_url }}">
                    <img src="{{ block.settings.icon }}" alt="{{ block.settings.label }}"  class="icon-img"/>
                    <span class="icon-label d-none d-md-flex">{{ block.settings.label }}</span>
                  </a>
                </div>
              </div>
              {% capture 'cart_icon_sm' %}
                <a class="d-flex align-items-center text-light" href="{{ block.settings.link_url }}">
                  <div class=" ">
                    <img src="{{ block.settings.icon }}" alt="{{ block.settings.label }}" class="img-fluid p-0 w-50"/>
                  </div>
                  <div class="">
                    {{ block.settings.label }}
                  </div>
                </a>
              {% endcapture %}
            {% when "cart_icon" %}
              <div class="{{display_sm_icon_css}}">
                {% assign css_icon = "" %}
                {% if block.settings.inline_display %}
                  {% assign css_icon = "icon-inline" %}
                {% endif %}
                <div class="icon {{ css_icon }}">
                  <a class="icon-link" href="{% path_to 'cart_index'%}">
                    <img src="{{ block.settings.icon }}" alt="{{ block.settings.label }}"  class="icon-img"/>
                    <span class="icon-label d-none d-md-flex">{{ block.settings.label }}</span>
                  </a>
                </div>
              </div>
              {% capture 'cart_icon_sm' %}
                <a class="d-flex align-items-center text-light" href="{% path_to cart %}">
                  <div class=" ">
                    <img src="{{ block.settings.icon }}" alt="{{ block.settings.label }}" class="img-fluid p-0 w-50"/>
                  </div>
                  <div class="">
                    {{ block.settings.label }}
                  </div>
                </a>
              {% endcapture %}
            {% when "user_icon" %}
              {% assign css_icon = "" %}
              {% if block.settings.inline_display %}
                {% assign css_icon = "icon-inline" %}
              {% endif %}
              <div class="{{display_sm_icon_css}}">
                <div class="icon {{ css_icon }} ">
                  <a class="icon-link" href="{% path_to 'account_index'%}">
                    <img src="{{ block.settings.icon }}" alt="{{ block.settings.label }}"  class="icon-img"/>
                    <span class="icon-label d-none d-md-block">
                      {% if current_customer %}
                        {{ current_customer.name }}
                      {% else %}
                        {{ block.settings.label }}
                      {% endif %}
                    </span>
                  </a>
                  {% include 'header_icon_account' %}
                </div>
              </div>
              {% capture 'user_icon_sm%}
                <a class="d-flex align-items-center text-light" href="{% path_to account%}">
                  <div class=" ">
                    <img src="{{ block.settings.icon }}" alt="{{ block.settings.label }}"  class="img-fluid p-0 w-50"/>
                  </div>
                  <div class="">
                    {% if current_customer %}
                      {{ current_customer.name }}
                    {% else %}
                      {{ block.settings.label }}
                    {% endif %}
                  </div>
                </a>
              {% endcapture %}
            {% when "navigation" %}
              <div class="w-100 header-block-navigation">
                <ul class="list-inline m-0 d-flex justify-content-{{block.settings.item_align}} row">
                  {% for category_level1 in store.categories %}
