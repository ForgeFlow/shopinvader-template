                      <li class="list-inline-item pr-3 pl-3 pt-3 pb-3 col-12 col-md-auto">
                        <a href="{{category.url_key  | prepend: url_base }}" class="font-weight-bold text-dark">
                          {{ category_level1.name}}
                        </a>
                        <div class="container p-3 p-md-5 list-inline-dropdown">
                          <div class="row">
                            <div class="col-12 col-md-8">
                              <div class="h3 text-uppercase pb-3 d-none d-md-block">{{ category_level1.name}}</div>
                              <ul class="row p-0">
                                {% for category_level2 in category_level1.childs %}
                                  <li class="col-12 col-md-4 pb-2 pt-2">
                                    <div class="h4">{{ category_level2.name}}</div>
                                    <ul class="p-0 m-0">
                                    {% for category_level3 in category_level2.childs %}
                                      <li class="pb-2 pt-2">
                                        <a href="#">{{ category_level3.name }}</a>
                                      </li>
                                    {% endfor %}
                                    </ul>
                                  </li>
                                {% endfor %}
                              </ul>
                            </div>
                            <div class="col-12 col-md-4">
                              {{ category_nav.images}}
                            </div>
                          </div>
                        </div>
                      </li>
                    {% endif %}
                  {% endfor%}
                </ul>
              </div>
            {% when "search" %}
              <div class="{{ css_cell }} header-block header-block-{{ block.type }} {{display_sm_icon_css}}">
              <div class="icon d-md-none">
                <a class="icon-link" href="{% path_to 'cart_index'%}">
                  <img src="{{ block.settings.icon }}" alt="{{ block.settings.label }}"  class="icon-img"/>
                  <span class="icon-label d-none d-md-flex">{{ block.settings.label }}</span>
                </a>
              </div>

              <div class="d-none d-md-block w-100">
                <form method="GET" action="{% path_to search %}" class="search-form d-flex flex-row pt-md-2 pt-md-3 " >
                  <input type="text" class="form-control search-input" id="header-search-input" placeholder="{{ block.settings.placeholder }}" aria-label="{{ block.settings.placeholder }}" aria-describedby="Product search" autocomplete="off" value="{{params.q}}" name="q" data-autosubmit>
                  <button class="btn btn-link btn-lg p-0 search-icon" name="submit" type="submit">
                    <img src="{{ block.settings.icon }}" alt="{{ block.settings.label }}"/>
                  </button>
                </form>
                <div class="small text-left pt-2 w-100">
                <div class="font-weight-bold">
                  {{ section.settings.baseline }}
                </div>
              </div>
              </div>
              <div id="header-search-hit" class="d-none search-result">
                <div id="header-search-product-title">
                  <div class="font-weight-bold">
                    {{ 'search_product' | translate }}
                    <span class="nb_hits"></span>
                  </div>
                </div>
                <div id="header-search-product-link">
                  <div class="row">
                    <div class="col-12 text-right pt-2 ">
                      <a data-href="{% path_to search %}" href="#" class="btn btn-primary btn-search-product">
                        {{ 'search_product_all' | translate }}
