{% if product_variant %}
  <div class="card product-thumbnail bg-white m-0 h-100 pb-1 {%if display_horizontal == true%}product-thumbnail-horizontal{%endif%}" data-link="{{product_variant.url_key  | prepend: url_base }}?ref={{product_variant.sku}}">
    <div class="product-thumbnail-img">
        <img class="group list-group-image card-img-top p-2" src="{{product_variant.images.first.medium.src  | default: site.metafields.theme.noimage }}" alt="{{product_variant.images.first.medium.alt}}" />
    </div>
    <div class="product-thumbnail-price card-body p-3 p-xl-2" data-link="{{product_variant.url_key  | prepend: url_base }}?ref={{product_variant.sku}}">
      <span class="small">
        <small>{{'product_price_from' | translate}} </small>
      </span>
      <strong class="h5">
        <span class="font-weight-bold {%if product_variant.price.discount > 0%}text-warning{%else%}text-dark{% endif %}">
          {% include 'currency' | value: product_variant.price.value %}
        </span>
        {%if product_variant.price.discount > 0%}
          <span class="text-dark small">
            <s>{% include 'currency' | value: product_variant.price.original_value %}</s>
          </span>
        {% endif %}
      </strong>
    </div>
    <div class="product-thumbnail-name card-body p-3 p-xl-2">
      <div class="font-weight-bold">
        <a href="{{product_variant.url_key  | prepend: url_base }}?ref={{product_variant.sku}}" class="card-title">
          {{product_variant.model.name}}
          <div class="small">{{product_variant.name}}</div>
        </a>
      </div>

    </div>
  </div>
{% endif %}
